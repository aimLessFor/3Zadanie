<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a3rdtask">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._3rdTask"
        android:fullBackupContent="@xml/backup_rules">

        <!-- MainActivity, определенная как основная и стартовая активность -->
        <activity
            android:name=".ui.login.ActivityLogin"
            android:label="@string/app_name"
            android:theme="@style/Theme._3rdTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ActivityLogin, используется для входа в систему -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:exported="false"/>

        <!-- WelcomeActivity, отображается после успешного входа -->
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/act"
            android:exported="false"/>

    </application>
</manifest>